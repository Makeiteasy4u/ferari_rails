<% if @post.errors.any? %>
    <ul>
      <% @post.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
      <% end %>
    </ul>
<% end %>
<%= form_for @post do |f| %>
    <p>
      <%= f.label :title %> <br>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :description %> <br>
      <%= f.text_area :description %>
    </p>
    <p>
      <%= f.submit %>
    </p>
<% end %>
<p>
  <%= link_to'Back to posts listenner', posts_path %>
</p>